.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  %h2 タスク編集
  = form_with(model: @task, url: board_task_path(@board, @task), local: true) do |f|
    %div
      = f.label :eyecatch, '投稿写真'
    %div
      =f.file_field :eyecatch, class: 'eyecatch'
    %div
      = f.label :title, 'タイトル'
    %div 
      = f.text_field :title, class: 'text'
    %div 
      = f.label :content, '内容'
    %div 
      = f.text_area :content, class: 'text'
    = f.submit 'Submit', class: 'btn-primary'