.container
  %h2= @board.title

  - @tasks.each do |task|
    = link_to board_task_path(@board, task) do
      .board
        - if task.eyecatch.attached?
          .image-eyecatch
            = image_tag task.eyecatch
        .board-title
          = task.title
        .board-content 
          = simple_format task.content
        .comment-count 
          %p コメント数
          %p= task.comments.count
        .board-user
          - if @board.user.profile_written?
            = image_tag @board.user.profile.avater
            %p= @board.user.profile.nickname
          - else
            %p= task.user.email
  = link_to new_board_task_path(@board) do
    .new-card
      %p ＋タスクの追加