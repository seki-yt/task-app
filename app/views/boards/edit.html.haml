.container
  %ul
    - @board.errors.full_messages.each do |message|
      %li= message
  %h2 
    ボードの編集
  = form_with(model: @board, local: true) do |f|
    %div
      = f.label :title, 'タイトル'
    %div 
      = f.text_field :title, class: 'text'
    %div 
      = f.label :content, 'ボードの内容'
    %div 
      = f.text_area :content, class: 'text'
    = f.submit '送信', class: 'btn-primary'